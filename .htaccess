<IfModule mod_rewrite.c>

Options +FollowSymLinks
RewriteEngine On

RewriteRule %{REQUEST_FILENAME} !-d
RewriteRule %{REQUEST_FILENAME} !-f
RewriteRule %{REQUEST_FILENAME} !-l

RewriteRule ^(.*)$ index.php/$1 [L]

</IfModule>
<IfModule !mod_rewrite.c>
	ErrorDocument 404 /index.php/error404.php
</IfModule>